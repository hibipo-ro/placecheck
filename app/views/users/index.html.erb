<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.picture.url, :size => "60x60" if user.picture? %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "削除しますか?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>